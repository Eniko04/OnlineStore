@model IEnumerable<StoreEntity>

@{
    ViewData["Title"] = "Buy Products";
}

<h2 class="text-center my-4">Buy Products</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Price.ToString("C")</p>
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@item.ImagePath" alt="@item.Title" class="img-fluid rounded mb-3" style="max-height: 200px;" />
                    }
                    <a asp-action="Buy" asp-route-id="@item.Id" class="btn btn-primary mt-2 w-100">
                        <i class="bi bi-cart"></i> Buy Now
                    </a>
                </div>
            </div>
        </div>
    }
</div>
