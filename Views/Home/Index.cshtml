@{
    ViewData["Title"] = "Welcome to OnlineShop";
}

<!-- Главен банер -->
<div class="text-center bg-light py-5 shadow-sm">
    <h1 class="display-3 fw-bold">Welcome to OnlineShop</h1>
    <p class="lead">Discover the best products at unbeatable prices!</p>
    <a class="btn btn-primary btn-lg mt-3" asp-controller="Buy" asp-action="Index">Shop Now</a>
</div>

<!-- Категории продукти -->
<div class="container my-5">
    <h2 class="text-center mb-4">Explore Our Categories</h2>
    <div class="row">
        <div class="col-md-4 text-center">
            <div class="card shadow-sm">
                <img src="/image/Phones.jpg" class="card-img-top" alt="Phones">
                <div class="card-body">
                    <h5 class="card-title">Phones</h5>
                    <p class="card-text">Find the latest smartphones at great prices.</p>
                    <a asp-controller="Buy" asp-action="Index" class="btn btn-outline-primary">Shop Phones</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 text-center">
            <div class="card shadow-sm">
                <img src="~/image/laptops.jpg" class="card-img-top" alt="Laptops">
                <div class="card-body">
                    <h5 class="card-title">Laptops</h5>
                    <p class="card-text">Browse powerful laptops for work and gaming.</p>
                    <a asp-controller="Buy" asp-action="Index" class="btn btn-outline-primary">Shop Laptops</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 text-center">
            <div class="card shadow-sm">
                <img src="~/image/headphones.jpg" class="card-img-top" alt="Headphones">
                <div class="card-body">
                    <h5 class="card-title">Headphones</h5>
                    <p class="card-text">Experience premium sound quality with our headphones.</p>
                    <a asp-controller="Buy" asp-action="Index" class="btn btn-outline-primary">Shop Headphones</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Промоционален банер -->
<div class="bg-primary text-white text-center py-5">
    <h2 class="fw-bold">Limited Time Offer!</h2>
    <p class="lead">Get up to 50% off on select items. Shop now and save big!</p>
    <a class="btn btn-light btn-lg mt-3" asp-controller="Buy" asp-action="Index">View Deals</a>
</div>

<!-- Защо да изберете нас -->
<div class="container my-5">
    <h2 class="text-center mb-4">Why Shop With Us?</h2>
    <div class="row text-center">
        <div class="col-md-4">
            <i class="bi bi-truck display-3 text-primary"></i>
            <h5 class="mt-3">Fast Delivery</h5>
            <p>We ensure quick and reliable delivery to your doorstep.</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-credit-card display-3 text-primary"></i>
            <h5 class="mt-3">Secure Payments</h5>
            <p>Your payment details are 100% safe with us.</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-star-fill display-3 text-primary"></i>
            <h5 class="mt-3">Top Quality</h5>
            <p>All our products are of the highest quality.</p>
        </div>
    </div>
</div>
